    div.row
        div.col-md-12
            h3 NRK om #{wikipedia_content.title}
    each row in  nrk_content|batch(4)
        div.row
                each hit in row
                    div.col-md-3
                        a(href=hit.url, target='_blank')
                            img(src=hit.image, class='img-responsive img-rounded')
                            h4 #{hit.title}
